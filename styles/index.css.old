/* Dark Theme */
[data-theme="light"] {
    --bg: #0b0c0f;
    --panel: #12141a;
    --text: #e6eaf2;
    --muted: #a9b1c3;
    --card: #151821;
    --accent: #7c9cff;
    --accent-2: #8ef0c8;
    --chip: #202433;
    --border: #22283a;
    --shadow: 0 10px 25px rgba(0,0,0,.25);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html, body {
    height: 100%
}

body {
    font-family: 'Macondo';
    line-height: 1.55;
    color: var(--text);
    background-color: var(--bg);
}

.container {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

a {
    text-decoration: none;
    color: var(--text)
}

a:hover {
    color: var(--muted)
}

.btn, .chip, select, input[type="search"] {
    font: inherit;
    color: var(--text);
    background: var(--panel);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 10px 12px;
}

input[type="search"] {
    width: 100%;
    background: var(--lm-primary-accent)
}

select {
    background: var(--lm-primary-accent)
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--lm-primary-accent);
    cursor: pointer;
    transition: transform .15s ease, background .2s ease, border-color .2s ease;
}

.btn:hover {
    transform: translateY(-1px);
}

.toggle {
    border-radius: 999px;
    padding: 8px 12px;
}

.controls {
    display: grid;
    /*grid-template-columns: 1fr auto auto;*/
    gap: 12px;
    margin-top: 14px;
}

.tag-row {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    align-items: center;
    padding-top: 8px;
}

.chip {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--lm-highlight);
    border-color: transparent;
    cursor: pointer;
    user-select: none;
}

.chip[data-active="true"] {
    outline: 2px solid color-mix(in oklab, var(--lm-secondary-accent) 70%, transparent);
}

.grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 18px;
    margin-top: 22px;
}

.card {
    background: var(--lm-secondary-accent);
    border: 1px solid var(--lm-text-dark);
    border-radius: 18px;
    box-shadow: var(--shadow);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform .15s ease, border-color .2s ease;
}

.card:hover {
    transform: translateY(-2px);
    border-color: color-mix(in oklab, var(--lm-primary-accent) 40%, var(--border));
}

.thumb { 
    aspect-ratio: 16/9;
    background: linear-gradient(135deg, rgba(124,156,255,.15), rgba(14,167,121,.15));
    display: grid;
    place-items: center;
}

.thumb img { 
    width: 85%;
    height: 85%;
    object-fit: cover;
    opacity: .9;
}

.card-body {
    padding: 14px;
    display: grid;
    gap: 10px;
}

.title {
    font-size: 1.05rem;
    font-weight: 700;
}

.desc {
    color: var(--lm-text-muted);
    font-size: .95rem;
}

.chips {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
}

.chips .chip {
    padding: 6px 10px;
    font-size: .85rem;
}

.actions {
    display: flex;
    gap: 8px;
    margin-top: 4px;
}

.actions a {
    text-decoration: none;
    color: var(--lm-text-dark);
    border: 1px solid var(--border);
    background: color-mix(in oklab, var(--lm-highlight) 85%, var(--lm-primary-accent) 15%);
    padding: 8px 12px;
    border-radius: 12px;
    font-weight: 600;
    transition: background .2s ease, transform .15s ease;
}

.actions a:hover {
    transform: translateY(-1px);
}

.empty {
    text-align: center;
    padding: 40px 16px;
    color: var(--lm-text-muted);
    display: none;
}

.sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0,0,1px,1px);
    white-space: nowrap;
    border: 0;
}

@media (max-width: 640px) {
    .toolbar { grid-template-columns: 1fr auto; }
    .controls { grid-template-columns: 1fr; }
}

/* Header Styles */
header {
    background-color: var(--lm-highlight);
    color: var(--lm-secondary-accent);
    padding: 1rem 0;
    box-shadow: 0 2px 5px rgba(0,0,0,0.3);
}

nav ul {
    display: flex;
    list-style: none;
}

nav ul li {
    margin-right: 1.5rem;
}

nav ul li a {
    font-weight: 500;
    font-size: 1.5rem;
}

/* Main Content Styles */
main {
    padding: 2rem 0;
}

.intro {
    text-align: center;
    margin-bottom: 3rem;
    padding-top: 25px;
}

.profile-img {
    width: 300px;
    height: 300px;
    border-radius: 50%;
    object-fit: cover;
    border: 5px solid var(--lm-highlight);
    margin-bottom: 1rem;
}

.links {
    text-align: center;
    /*background-color: var(--lm-primary-accent);*/
}

.links a {
    display: inline-flex;
    align-items: center;
    margin: 10px;
    padding: 10px 15px;
    color: var(--lm-text-dark);
    text-decoration: none;
    font-size: 18px;
    border-radius: 8px;
}

.links a:hover {
    color: var(--lm-text-muted);
}

.links img {
    width: 24px;
    height: 24px;
    margin-right: 8px;
}

h1 {
  font-family: 'CedarvilleCursive';
  font-size: 3rem;
}

/* Resume Styles */
.resume-area {
    margin-bottom: 2rem;
    background: var(--lm-secondary-accent);
    padding: 1.5rem;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-top: 1rem;
}

.skill-category h4 {
    margin-bottom: 0.5rem;
    color: var(--lm-text-muted);
}

/* Footer Styles */
footer {
    background-color: var(--lm-highlight);
    color: var(--lm-text-dark);
    padding: 1.5rem 0;
    text-align: center;
}

.social-links {
    margin-top: 1rem;
}

.social-links a {
    color: var(--lm-text-dark);
    margin: 0 0.5rem;
}

.social-links a:hover {
    color: var(--lm-text-muted);
}